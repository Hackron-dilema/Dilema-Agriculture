  "risk_rules": [
    {
      "id": "flowering_heat",
      "condition": "stage == 'flowering' AND temp_max > critical_temp_max",
      "severity": "high",
      "message": "Critical: Heat stress during flowering can cause poor pollination and reduced yield",
      "action": "Consider irrigation during hottest part of day for cooling effect"
    },
    {
      "id": "flowering_rain",
      "condition": "stage == 'flowering' AND precipitation_probability > 70",
      "severity": "medium",
      "message": "Rain during flowering may affect pollination in some crops",
      "action": "Monitor closely for disease development after rain"
    },
    {
      "id": "maturity_rain",
      "condition": "stage == 'maturity' AND precipitation_sum > 20",
      "severity": "high",
      "message": "Heavy rain during maturity can cause grain damage and fungal issues",
      "action": "Consider early harvest if crop is ready"
    },
    {
      "id": "seedling_frost",
      "condition": "stage == 'seedling' AND temp_min < 5",
      "severity": "high",
      "message": "Frost risk to young seedlings",
      "action": "Provide protective covering if possible"
    },
    {
      "id": "vegetative_drought",
      "condition": "stage == 'vegetative' AND days_without_rain > 7 AND irrigation_type == 'rainfed'",
      "severity": "medium",
      "message": "Drought stress may limit vegetative growth",
      "action": "Irrigate if possible, or prepare for delayed growth"
    },
    {
      "id": "grain_filling_heat",
      "condition": "stage == 'grain_filling' AND temp_max > 35",
      "severity": "medium",
      "message": "Heat stress can reduce grain weight and quality",
      "action": "Ensure adequate irrigation to mitigate heat stress"
    }
  ],
  "general_advisories": {
